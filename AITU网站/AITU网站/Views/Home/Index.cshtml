@{
    ViewBag.Title = "起始页";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .head{
        height: 150px;
        padding-top:30px;
        background-image: url('../../common/images/229c1766fb58511e2378b74b7be6c5f2.jpg');
    }
    .footer{
        height: 100px;
        padding-top:20px;
        background-image: url('../../common/images/229c1766fb58511e2378b74b7be6c5f2.jpg');
    }
    .body {
        height: 500px;
        padding-top:150px;
        background-image: url('../../common/images/04926b7a2ee45587c122a23d1f574257.jpg');
    }
    .img{
        width:150px;
        height:150px;
        transition:1s;
    }
    .img:hover{
        width:150px;
        height:150px;
        transform:rotate(360deg);
    }
    .a1{
        color:darkblue;
        font-size:22px;
        font-family:"黑体";
    }
    .a1:hover{
        color:blue;
    }
    .a2{
        color:steelblue;
        font-size:20px;
        font-family:"黑体";
    }
    .a2:hover{
        color:forestgreen;
    }
</style>
<div class="container">
    <div class="head text-center">
       <h1 style="color:white">AITU 爱图网</h1> 
    </div>
    <div class="body row">
        <div class="col-md-4 col-md-offset-1">
            <div class="box1 center-block">
                <div class="img">
                    <img src="~/common/images/de78328243b8c2ba5b4ba802a5a12c9e.png" style="width:100%" alt="随便看看" />
                </div>
                <!--超链接地址这样写才有用-->
                <!--@Html.ActionLink("随便看看","Main","Home")-->
                <a class="a1" href="~/Home/MainIndex">随便看看</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="center-block">
                <div class="img">
                    <img src="~/common/images/4d5a0cd30b4781ff300419d8113e097e.png" style="width:100%" alt="登陆/注册" />
                </div>
                <a class="a1" href="链接到登陆">
                    已有账号 登陆
                </a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="center-block">
                <div class="img">
                    <img src="~/common/images/9b7704da7a9fe62ab3d006245af7f74a.png" style="width:100%" alt="注册" />
                </div>
                <a class="a1" href="链接到注册">
                    没有账号 立即注册
                </a>
            </div>
        </div>
    </div>
    <div class="footer text-center">
        <a class="a2" href="#">关于我们</a>
    </div>
</div>
