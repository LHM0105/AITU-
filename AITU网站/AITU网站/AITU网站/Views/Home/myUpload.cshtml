            <img src="~/common/images/0c1611c8203d94ec22ce360f348ad658.jpg" style="width:100%" />

            <div class="img-name">图片名称（1224*1600）</div>
            <hr />
            <div class="collect">收藏</div>
            <div class="download">下载</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="img-box">
            <img src="~/common/images/35461532c887711d7b7705b8882204a4.png" style="width:100%" />

            <div class="img-name">图片名称（1224*1600）</div>
            <hr />
            <div class="collect">收藏</div>
            <div class="download">下载</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function mc() { var _i = $("#uploadfile"); _i.click(); }
    function mm() {
        path = $("#uploadfile").val();
        $("#puf").val(path);
    }
    function uploads() {
        $.ajax({
            url: '/Home/Uploads',
            type: "POST",
            data: 'pa='+path ,
            success: function (data) {
                alert(data);
            }
        });
    }
</script>
