<!--上传图片按钮-->
<button class="btn btn-info" data-toggle="modal" data-target="#modalDialog1">
    上传图片
</button>
<!--上传图片模式对话框-->
<div id="modalDialog1" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">图片上传</h4>
            </div>
            <div class="modal-body">
                <input type="text" name="predent" id="puf" />
                <input type="button" value="浏览..." onclick="mc()" />
                <input type="file" name="uf" id="uploadfile" style="display:none" onchange="mm()" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="uploads()">上传</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">放弃</button>
            </div>
        </div>
    </div>
</div>


<!--从数据库获取用户上传的图片-->
<div class="row">
    <div class="col-md-4">
        <div class="img-box">
            <img src="~/common/images/03ca341e723a6eb62809b1dcd634a610.png" style="width:100%" />
